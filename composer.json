{
    "name": "promopult/yandex-business-api",
    "description": "Yandex.Business API client PHP-library",
    "type": "library",
    "license": "UNLICENSE",
    "authors": [
        {
            "name": "Dmitry Gladyshev",
            "email": "dgladyshev@promopult.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "psr/http-client": "^1.0.1",
        "guzzlehttp/psr7": "^1.8.4|^2.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.27",
        "squizlabs/php_codesniffer": "^3.7.1",
        "guzzlehttp/guzzle": "^7.4.5",
        "monolog/monolog": "^2.8.0"
    },
    "autoload": {
        "psr-4": {
            "Promopult\\YandexBusinessApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Promopult\\YandexBusinessApi\\Tests\\": [
                "tests/"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
